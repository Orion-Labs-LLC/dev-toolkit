{
  "name": "shared-configs",
  "version": "1.0.0",
  "description": "Shared configuration packages for dev tooling",
  "author": "boeschj",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint --fix",
    "format": "prettier --write .",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "prepack": "pnpm build",
    "prepublishOnly": "pnpm test && pnpm lint",
    "publish:all": "pnpm -r publish",
    "version:all": "pnpm -r version",
    "precommit": "pnpm test && pnpm lint:fix && pnpm typeheck && pnpm format",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mts}": [
      "pnpm precommit"
    ],
    "*.{json,md,yml,yaml}": [
      "pnpm format"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
