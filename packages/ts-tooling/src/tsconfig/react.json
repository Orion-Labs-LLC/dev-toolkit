{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json", 
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.cts",
    "**/*.mts"
  ]
}