{
  "name": "@boeschj/eslint",
  "version": "1.0.0",
  "description": "Shared ESLint configuration for TypeScript projects",
  "main": "index.mts",
  "type": "module",
  "exports": {
    ".": "./src/index.mts",
    "./base": "./src/base.mts",
    "./react": "./src/react.mts",
    "./next": "./src/next.mts"
  },
  "files": [
    "dist/**"
  ],
  "author": "Jordan Boesch",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "dev": "tsup --watch"
  },
  "devDependencies": {
    "@typescript-eslint/utils": "^8.36.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@eslint/js": "^9.20.0",
    "@next/eslint-plugin-next": "^15.1.6",
    "eslint": "^9.20.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "typescript-eslint": "^8.23.0"
  },
  "publishConfig": {
    "access": "public"
  }
}